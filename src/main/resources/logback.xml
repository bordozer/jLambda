<?xml version="1.0" encoding="UTF-8"?>
<configuration>

    <property name="log.files.path" value="/var/log/bordozer/lambda"/>
    <property name="service.name" value="lambda"/>
    <property name="pattern" value="%-4r, %date{yyyy-MM-dd HH:mm:ss.SSS}, [%thread] %-5level, %logger{5}, %m%n"/>

    <appender name="FILE" class="ch.qos.logback.core.FileAppender">
        <file>${log.files.path}/${service.name}.log</file>
        <append>true</append>
        <encoder>
            <pattern>%-7d{yyyy-MM-dd HH:mm:ss:SSS} %m%n</pattern>
        </encoder>
        <layout>
            <Pattern>${pattern}</Pattern>
        </layout>
    </appender>

    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>${pattern}</pattern>
        </encoder>
    </appender>

    <root level="INFO">
        <appender-ref ref="FILE" />
        <appender-ref ref="CONSOLE" />
    </root>

</configuration>
